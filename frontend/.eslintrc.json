{
    "extends": [
        "next/core-web-vitals"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "complexity": [
            "warn",
            3
        ],
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "max-params": [
            "error",
            3
        ],
        "no-var": "error",
        "prefer-const": "error",
        "require-await": "error"
    }
}
